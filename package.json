{
  "name": "drakonic-nexus",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "vite",
    "dev": "vite",
    "build": "vite build",
    "build:gh": "vite build --base=/drakonik-nexus/",
    "preview": "vite preview",
    "lint": "eslint --ext .ts,.vue src",
    "format": "prettier --write \"src/**/*.{ts,vue,js,css,md}\"",
    "test:unit": "vitest",
    "test:unit:watch": "vitest --watch",
    "test:e2e": "cypress open",
    "ci": "npm run lint && npm run test:unit && npm run build"
  },
  "lint-staged": {
    "**/*.{ts,vue,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{css,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/compiler-sfc": "^3.3.0",
    "@vue/test-utils": "^2.0.0-rc.18",
    "@vue/tsconfig": "^0.8.1",
    "autoprefixer": "^10.4.0",
    "cypress": "^12.0.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^9.0.0",
    "husky": "^8.0.0",
    "postcss": "^8.4.0",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.3.0",
    "vue-eslint-parser": "^10.2.0"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "pinia": "^2.0.30",
    "vue": "^3.3.0",
    "vue-router": "^4.2.0"
  }
}
